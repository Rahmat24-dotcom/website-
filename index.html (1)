                                                                                                                                      <script>
                                                                                                                                          let nama = "", nomor = "", pesan = "", hasil = "";

                                                                                                                                              function nextToPage2() {
                                                                                                                                                      nama = document.getElementById('nama').value.trim();
                                                                                                                                                            nomor = document.getElementById('nomor').value.trim();
                                                                                                                                                                  if (!nama || !nomor) return alert("Isi dulu nama dan nomor WA-nya üòÖ");
                                                                                                                                                                        document.getElementById('page1').classList.add('hidden');
                                                                                                                                                                              document.getElementById('page2').classList.remove('hidden');
                                                                                                                                              }

                                                                                                                                                  function nextToPage3() {
                                                                                                                                                          pesan = document.getElementById('pesan').value.trim();
                                                                                                                                                                if (!pesan) return alert("Tuliskan perasaanmu dulu dong üò≥");
                                                                                                                                                                      document.getElementById('page2').classList.add('hidden');
                                                                                                                                                                            document.getElementById('page3').classList.remove('hidden');
                                                                                                                                                  }

                                                                                                                                                      function pilih(status) {
                                                                                                                                                              let emoji = status === "diterima" ? "üòçüéâ" : "üòÖüíî";
                                                                                                                                                                    hasil = `Halo Rahmat Akbar! üëã\n\n${nama} (${nomor}) baru aja nyatain perasaan:\n"${pesan}"\n\nDan jawabannya: ${status.toUpperCase()} ${emoji}`;
                                                                                                                                                                          document.getElementById('hasil').innerText = hasil;
                                                                                                                                                                                
                                                                                                                                                                                      // Nomor WA pembuat (Rahmat)
                                                                                                                                                                                            const nomorPembuat = "6283871042924";
                                                                                                                                                                                                  const waLink = `https://wa.me/${nomorPembuat}?text=${encodeURIComponent(hasil)}`;
                                                                                                                                                                                                        document.getElementById('waLink').href = waLink;

                                                                                                                                                                                                              document.getElementById('page3').classList.add('hidden');
                                                                                                                                                                                                                    document.getElementById('page4').classList.remove('hidden');
                                                                                                                                                      }
                                                                                                                                                        </script>

